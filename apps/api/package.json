{
  "name": "nexus-booking-api",
  "private": true,
  "scripts": {
    "deploy:prepare": "pnpm exec -- prisma generate && pnpm exec -- prisma migrate deploy",
    "db:migrate:deploy": "pnpm -C apps/api exec -- prisma migrate deploy",
    "db:migrate:status": "pnpm -C apps/api exec -- prisma migrate status",
    "start": "node src/server.js",
    "start:prod": "pnpm run deploy:prepare && node src/server.js",
    "dev": "node src/server.js",
    "health:smoke": "node scripts/health-smoke.cjs",
    "api:smoke": "node scripts/api-smoke.cjs",
    "error:smoke": "node scripts/error-smoke.cjs",
    "concurrency:smoke": "node scripts/concurrency-smoke.cjs"
  },
  "prisma": {
    "seed": "node prisma/seed.cjs"
  },
  "devDependencies": {
    "prisma": "^6.19.1"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "express": "^5.2.1"
  }
}
